// Index page itself
.crew-list.clearfix
  %ul.scrollable
    - @crews.each do |crew|
      %li 
        %h3 #{crew.combine_names}
        #{link_to image_tag('png/menu33.png'), crew_path(crew), class: 'profile-button'}
        #{link_to image_tag('png/configuration12.png'), edit_crew_path(crew), class: 'edit-button'}
