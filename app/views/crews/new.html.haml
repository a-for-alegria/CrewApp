- provide(:title, 'New member')

.signed-in-content
  %div.form-block
    %h2 New member
    =form_for(@crew)do |f|
      =render 'shared/error_messages', object: f.object 
      =f.label :name
      =f.text_field :name, placeholder: "Clint"
      =f.label :secondname
      =f.text_field :secondname, placeholder: "Eastwood"
      =f.label :spec
      =f.text_field :spec, placeholder: "Engineer"
      =f.label :bank_card
      =f.text_field :bank_card, placeholder: "xxxx xxxx xxxx xxxx"
      =f.label :rate
      =f.number_field :rate, placeholder: "e.g. 1000"
      =f.select(:client_project, @clients.map(&:project_name), {prompt: "Select project"})
      =f.file_field :avatar

      %button{type: 'submit'} Create
