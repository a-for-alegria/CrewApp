#crewEditModal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "myModalLabel", :role => "dialog", :tabindex => "-1"}
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} Ã—
        %h2#crewModalLabel.modal-title Edit member info
      .modal-body
        =form_for(@crew) do |f|
          =render 'shared/error_messages', object: f.object 
          .form-group 
            =f.label :name
            =f.text_field :name, placeholder: "Clint"
            
            =f.label :secondname
            =f.text_field :secondname, placeholder: "Eastwood"
            
            =f.label :dob
            =f.date_field :dob, class: 'form-control'

            =f.label :spec
            =f.text_field :spec, placeholder: "Engineer"
            
            =f.label :bank_card
            =f.text_field :bank_card, placeholder: "xxxx xxxx xxxx xxxx"
            
            =f.label :rate
            =f.number_field :rate, placeholder: "e.g. 1000"
            
            =f.select(:client_project, @projects.pluck(:project_name), {prompt: "Select project"})
            =f.file_field :avatar
            %button.btn.btn-default.form-submit{type: 'submit'} Save changes

