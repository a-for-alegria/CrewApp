%tbody
  %tr 
    %td Age
    %td 
      %strong #{@crew.age}
      %span (#{@crew.dob})
  %tr
    %td Specialization
    %td 
      %strong #{@crew.spec}  
  %tr  
    %td Bank card
    %td 
      %strong #{@crew.bank_card}
  %tr
    %td Rate/month
    %td 
      %strong $#{@crew.rate}  
  - if @crew.client_project?
    %tr
      %td Project
      - @assigned_projects.each do |proj|
        %td
          %strong #{link_to proj.project_name, project_path(proj)}
