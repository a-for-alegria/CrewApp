- provide(:title, 'Edit panel')

%h1 Edit panel
%div.form-block
  =form_for(@crew) do |f|
    / =render 'shared/error_messages', object: f.object 
    =f.label :name
    =f.text_field :name, placeholder: "Enter name of new member"
    =f.label :secondname
    =f.text_field :secondname, placeholder: "Enter second name of new member"
    =f.file_field :avatar

    =f.submit "Save"
    %button #{link_to 'Cancel', crew_path(@crew)}