!!!
%html
  %head
    %title Crew : : #{yield(:title)}
    = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application", "data-turbolinks-track" => true
    = javascript_include_tag "myDirectiveJSfile"
    = csrf_meta_tags
  %body
    .main-wrapper
      // Flash notice
      - if flash[:alert]
        .alert.alert-warning.alert-dismissible.alert-halfsize{:role => "alert"} 
          %button.close{"aria-label" => "Close", "data-dismiss" => "alert", :type => "button"}
            %span{"aria-hidden" => "true"} ×
          #{flash[:alert]}
      -if flash[:success]
        .alert.alert-success.alert-dismissible.alert-halfsize{:role => "alert"} 
          %button.close{"aria-label" => "Close", "data-dismiss" => "alert", :type => "button"}
            %span{"aria-hidden" => "true"} ×
          #{flash[:success]}
      %main
        = yield
        